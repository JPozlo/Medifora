<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10sp"
    tools:context=".ui.fragment.PrivacyFragment">

    <TextView
        android:id="@+id/tvLegalTerms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Legal Terms"
        android:textSize="18sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7sp"
        android:background="?android:attr/listDivider" />

    <RelativeLayout
        android:layout_marginTop="7sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvUserDataSendOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send user data for better experience"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/checkboxSendUserData"
            android:checked="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>



</LinearLayout>